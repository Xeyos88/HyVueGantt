{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "scripts/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["node"],
    "lib": ["ESNext"],
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  }
}
